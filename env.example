# GenAI Trading Bot Environment Configuration

# Application Settings
ENVIRONMENT=development
DEBUG=true
APP_NAME=GenAI Trading Bot
APP_VERSION=0.1.0

# LLM Provider Settings
LLM_PRIMARY_PROVIDER=openai
LLM_FALLBACK_PROVIDERS=anthropic,gemini

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.1

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=1000
ANTHROPIC_TEMPERATURE=0.1

# Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro
GEMINI_MAX_TOKENS=1000
GEMINI_TEMPERATURE=0.1

# LLM Rate Limiting
LLM_MAX_REQUESTS_PER_MINUTE=60
LLM_MAX_TOKENS_PER_MINUTE=100000
LLM_TIMEOUT_SECONDS=30

# Binance Configuration
BINANCE_MODE=paper
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# Risk Management
BINANCE_MAX_RISK_PER_TRADE=0.01
BINANCE_MAX_POSITION_SIZE=0.1
BINANCE_MAX_DAILY_TRADES=50
BINANCE_MAX_DAILY_LOSS=0.05

# Order Settings
BINANCE_MIN_ORDER_SIZE=10.0
BINANCE_MAX_ORDER_SIZE=10000.0
BINANCE_DEFAULT_TIME_IN_FORCE=GTC

# Data Settings
DATA_DIRECTORY=./data
CACHE_DIRECTORY=./cache
CACHE_TTL_SECONDS=3600
DATA_MAX_AGE_HOURS=24
DATA_MIN_DATA_POINTS=100

# Technical Indicators
DATA_RSI_PERIOD=14
DATA_SMA_PERIOD=20
DATA_EMA_PERIOD=20
DATA_ATR_PERIOD=14

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=./logs/trading_bot.log
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_INCLUDE_TIMESTAMPS=true
LOG_INCLUDE_CORRELATION_IDS=true
LOG_MASK_SENSITIVE_DATA=true

# Performance Settings
MAX_WORKERS=4
REQUEST_TIMEOUT=30
RETRY_ATTEMPTS=3
RETRY_DELAY=1.0

# Database Settings (for future use)
DB_URL=sqlite:///trading_bot.db
DB_ECHO=false
